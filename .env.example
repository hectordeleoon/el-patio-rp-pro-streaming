# ======================================
# EL PATIO RP PRO - ENVIRONMENT VARIABLES
# ======================================

# ============ GENERAL CONFIG ============
NODE_ENV=production
PORT=3000
APP_URL=https://tu-app.railway.app
WEBHOOK_SECRET=cambiar_por_secret_seguro_aqui

# ============ DISCORD ============
DISCORD_TOKEN=tu_discord_bot_token_aqui
DISCORD_CLIENT_ID=tu_discord_client_id
DISCORD_CLIENT_SECRET=tu_discord_client_secret
DISCORD_GUILD_ID=tu_server_id_aqui
DISCORD_FORUM_CHANNEL_ID=id_del_canal_foro
DISCORD_CLIPS_CHANNEL_ID=id_del_canal_clips
DISCORD_NOTIFICATIONS_CHANNEL_ID=id_del_canal_notificaciones

# ============ DATABASE ============
# Railway configura esto automáticamente
DATABASE_URL=postgresql://user:password@host:5432/database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=elpatio_rp_pro
DB_USER=postgres
DB_PASSWORD=tu_password_aqui
DB_SSL=true
DB_POOL_MIN=2
DB_POOL_MAX=10

# ============ REDIS ============
# Railway configura esto automáticamente
REDIS_URL=redis://default:password@host:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=tu_redis_password
REDIS_DB=0

# ============ TWITCH ============
TWITCH_CLIENT_ID=tu_twitch_client_id
TWITCH_CLIENT_SECRET=tu_twitch_client_secret
TWITCH_WEBHOOK_SECRET=tu_webhook_secret
TWITCH_CALLBACK_URL=https://tu-app.railway.app/webhooks/twitch

# ============ YOUTUBE ============
YOUTUBE_API_KEY=tu_youtube_api_key
YOUTUBE_CLIENT_ID=tu_youtube_client_id
YOUTUBE_CLIENT_SECRET=tu_youtube_client_secret
YOUTUBE_REDIRECT_URI=https://tu-app.railway.app/auth/youtube/callback

# ============ KICK ============
KICK_API_KEY=tu_kick_api_key
KICK_USERNAME=tu_kick_username
KICK_PASSWORD=tu_kick_password

# ============ TIKTOK ============
TIKTOK_CLIENT_KEY=tu_tiktok_client_key
TIKTOK_CLIENT_SECRET=tu_tiktok_client_secret
TIKTOK_ACCESS_TOKEN=tu_tiktok_access_token
TIKTOK_REFRESH_TOKEN=tu_tiktok_refresh_token

# ============ INSTAGRAM ============
INSTAGRAM_USERNAME=tu_instagram_username
INSTAGRAM_PASSWORD=tu_instagram_password
INSTAGRAM_ACCESS_TOKEN=tu_instagram_access_token

# ============ OPENAI ============
OPENAI_API_KEY=tu_openai_api_key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=2000

# ============ DEEPGRAM (Transcripción) ============
DEEPGRAM_API_KEY=tu_deepgram_api_key

# ============ CLIP GENERATION ============
CLIP_MIN_DURATION=15
CLIP_MAX_DURATION=60
CLIP_DEFAULT_DURATION=30
CLIP_STORAGE_PATH=/tmp/clips
CLIP_RETENTION_DAYS=7
CLIP_MAX_SIZE_MB=100

# ============ VIRAL SCORE ============
VIRAL_SCORE_AUTO_PUBLISH_THRESHOLD=80
VIRAL_SCORE_MANUAL_REVIEW_THRESHOLD=50
VIRAL_SCORE_REJECT_THRESHOLD=0

# ============ VIDEO PROCESSING ============
FFMPEG_PATH=/usr/bin/ffmpeg
FFPROBE_PATH=/usr/bin/ffprobe
VIDEO_BITRATE=2000k
AUDIO_BITRATE=128k
VIDEO_CRF=23
VIDEO_PRESET=medium

# ============ RP VALIDATION ============
RP_ALLOWED_GAMES=Grand Theft Auto V,GTA V
RP_REQUIRED_KEYWORDS=El Patio,Patio RP,ElPatio
RP_BANNED_CATEGORIES=Just Chatting,Music,Art
RP_MIN_STREAM_DURATION=300

# ============ PUBLICATION SCHEDULE ============
PUBLISH_TIMEZONE=America/Santo_Domingo
PUBLISH_OPTIMAL_HOURS=18,19,20,21,22
PUBLISH_AVOID_HOURS=3,4,5,6,7,8
PUBLISH_MAX_DAILY_CLIPS=10

# ============ STORAGE ============
STORAGE_TYPE=local
AWS_S3_BUCKET=tu-bucket-s3
AWS_ACCESS_KEY_ID=tu_aws_access_key
AWS_SECRET_ACCESS_KEY=tu_aws_secret_key
AWS_REGION=us-east-1

# ============ MONITORING & LOGS ============
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/elpatio-rp-pro
LOG_MAX_FILES=14
LOG_MAX_SIZE=20m

# ============ SECURITY ============
JWT_SECRET=cambiar_por_jwt_secret_muy_seguro
JWT_EXPIRATION=24h
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=https://tu-dominio.com

# ============ WEB PANEL ============
PANEL_PORT=3001
PANEL_SESSION_SECRET=cambiar_por_session_secret_seguro
PANEL_ADMIN_EMAIL=admin@elpatio-rp.com
PANEL_ADMIN_PASSWORD=cambiar_password_inicial

# ============ FEATURE FLAGS ============
FEATURE_AUTO_CLIP_GENERATION=true
FEATURE_AUTO_PUBLICATION=true
FEATURE_AI_OPTIMIZATION=true
FEATURE_VIRAL_SCORE=true
FEATURE_MANUAL_APPROVAL=true
FEATURE_MULTI_STREAMER_CLIPS=false

# ============ DEBUGGING ============
DEBUG=false
VERBOSE_LOGGING=false
DRY_RUN=false
